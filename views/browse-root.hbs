{{#if ns}}
<section>
	<div class="section ns-list">
	<h2>Namespaces of related modules</h2>

	<table>
	<tr>
		<th>Name</th><th>Description</th>
	</tr>
	{{#each ns}}
		<tr>
			<td><a href="/browse?ns={{name}}">{{name}}</a></td>
			<td>{{desc}}</td>
		</tr>
	{{/each}}
	</table>
	</div>
</section>
{{/if}}

{{#if bundle}}
<section>
	<div class="section bundle-list">
	<h2>Bundles of modules released together</h2>

	<table>
	<tr>
		<th>Name</th><th>Description</th>
	</tr>
	{{#each bundle}}
		<tr>
			<td><a href="/browse?b={{name}}">{{name}}</a></td>
			<td>{{desc}}</td>
		</tr>
	{{/each}}
	</table>
	</div>
</section>
{{/if}}
